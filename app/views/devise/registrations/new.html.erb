<div class="devise-container">
  <div class="devise-box">

    <h2>Sign up</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="form-inline">
        <div class="field">
          <%= f.label :お名前 %><br />
          <%= f.text_field :last_name, autocomplete: "last_name", placeholder: "姓", :size=>"20" %>
          <%#= f.text_field :last_name, autocomplete: "last_name", placeholder: "姓", :size=>"15", :class=>"form-control", :style=>"margin-left:20px" %>
          <%= f.text_field :first_name, autocomplete: "first_name", placeholder: "名" %>
        </div>
      </div>

      <div class="form-inline">
        <div class="field">
          <%= f.label :フリガナ %><br />
          <%= f.text_field :last_name_kana, autocomplete: "last_name_kana", placeholder: "セイ" %>
          <%= f.text_field :first_name_kana, autocomplete: "first_name_kana", placeholder: "メイ" %>
        </div>
      </div>

      <div class="form-inline">
        <div class="field">
          <%= f.label :ご年齢　　　　　　　　性別 %><br />
          <%= f.text_field :generation, autocomplete: "generation" %>
          <%= f.text_field :gender, autocomplete: "gender" %>
        </div>
      </div>

      <div class="field">
        <%= f.label :メールアドレス %><br />
        <%= f.email_field :email, autocomplete: "email", :size=>"42" %>
      </div>

      <div class="field">
        <%= f.label :パスワード %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %>文字以上)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password" %>
      </div>

      <div class="field">
        <%= f.label :パスワード %>
        <em>(確認用)</em><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>

      <div class="actions">
        <%= f.submit "会員登録(確認)", :class=>"btn btn-primary" %>
      </div>

    <% end %>

    <%= render "devise/shared/links", :class=>"btn" %>

  </div>
</div>