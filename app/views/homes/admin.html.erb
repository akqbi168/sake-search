<%= render 'layouts/header' %>

<div class="admin-index">

  <h1>Admin Index</h1>

  <%= link_to '+銘柄追加+', new_item_path, class: "admin-text" %><br>

  <%= link_to '+銘柄一覧+', items_result_path, class: "admin-text" %><br>

  <% @items.each do |item| %>
    <table><h5>
      <tr>
        <td style="width:250px">
          <%= link_to '◇' + item.name, item_path(item) %>
        </td>
        <td style="width:40px">
          <%= link_to '編集', edit_item_path(item) %>
        </td>
        <td style="width:40px">
          <%= link_to '削除', item_path(item), method: :delete, data: { confirm: "本当に削除しますか？"} %>
        </td>
      </tr>
    </h5></table>
  <% end %>

  <%= link_to '+店舗追加+', new_store_path, class: "admin-text" %><br>

  <% @stores.each do |store| %>
    <table><h5>
      <tr>
        <td style="width:250px">
          <%= link_to '◇' + store.store_name, store_path(store) %>
        </td>
        <td style="width:40px">
          <%= link_to '編集', edit_store_path(store) %>
        </td>
        <td style="width:40px">
          <%= link_to '削除', store_path(store), method: :delete, data: { confirm: "本当に削除しますか？"} %>
        </td>
      </tr>
    </h5></table>
  <% end %>

</div>