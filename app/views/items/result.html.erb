<%= render 'layouts/header' %>

<div class="search-area">
  <%= form_tag items_result_path, method: :get do %>
    <%= text_field_tag :search, '' ,{ :placeholder => '銘柄を入力', :class => 'search-box' } %>
    <%= submit_tag '検索',:class => 'submit-tag' %>
  <% end %>
</div>

<div class="items-result-container">

  <h2 class="result-title-text">結果一覧</h2>
    <% @items.shuffle.each do |item| %>

      <div class="result-row clearfix">
        <div class="result-visual-area">
          <div class="white-mask">
            <%= link_to item_path(item) do %>
              <%= image_tag item.image.to_s, class: "result-visual-content" %>
            <% end %>
          </div>
        </div>

        <div class="result-body-area">
          <%= link_to item_path(item) do %>
            <h3 class="result-items-name"><%= item.name %></h3>
          <% end %>

          <p>[<%= item.category_id.slice(3..9) %>] / 
            <% item.tags.each do |tag| %>
              [<%= tag.tag_name %>]
            <% end %>
          </p>

          <p>
            <%= item.introduction.slice(0..119) %>
            <% if item.introduction.length >= 119 %>...<% end %>
          </p>
        </div>

      </div>
    <% end %>

</div>

<%= render 'layouts/footer' %>