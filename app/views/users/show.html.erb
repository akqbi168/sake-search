<%= render 'layouts/header' %>

<div class="users-container clearfix">

  <div class="users-image-wrapper">
    <%= image_tag @user.image_id.to_s, class: 'users-image', fallback: "/images/no_image.png" %>
  </div>

  <div class="users-profile-wrapper">
    <table>
      <tr class="users-profile-box">
        <td>名前：</td>
        <td><%= @user.last_name %>　<%= @user.first_name %>　様</td>
      </tr>
      <tr class="users-profile-box">
        <td>年代</td>
        <td><%= @user.generation_id %></td>
      </tr>
      <tr class="users-profile-box">
        <td>性別：</td>
        <td><%= @user.gender_id %></td>
      </tr>
      <tr class="users-profile-box">
        <td>メールアドレス：　</td>
        <td><%= @user.email %></td>
      </tr>
    </table>
  </div>

  <div>
    <%= link_to '修正', edit_user_path(@user), class: "btn btn-sm btn-default" %>
  </div>

</div>

<%= render 'layouts/footer' %>